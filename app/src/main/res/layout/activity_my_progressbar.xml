<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.kcgz.interview.MyProgressbarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.kcgz.interview.view.HorizontalProgressbarWithProgress
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:progress="50"
            app:progress_reach_color="@color/colorAccent"
            app:progress_unreach_color="@color/colorPrimaryDark"
            app:progress_text_color="@color/colorPrimary"
            app:progress_text_offset="20dp"
            app:progress_text_size="20sp"/>
        <com.kcgz.interview.view.HorizontalProgressbarWithProgress
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="#44ff0000"
            android:progress="100"
            app:progress_reach_color="#00ff00"
            app:progress_text_offset="10dp"
            app:progress_text_size="30sp"
            app:progress_text_color="#000"/>
    </LinearLayout>
</ScrollView>
